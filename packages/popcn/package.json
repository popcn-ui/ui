{
  "name": "popcn",
  "version": "0.0.2",
  "description": "Add components to your project - PopCN design system",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist node_modules",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm build && pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm build && pnpm publish --access public"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.1",
    "prompts": "^2.4.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.0",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "cli",
    "ui",
    "components",
    "aurora",
    "aurorapop",
    "tailwind",
    "radix-ui",
    "design-system",
    "gradient",
    "motion"
  ],
  "author": {
    "name": "popcn",
    "url": "https://popcnui.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/popcn-ui/ui"
  },
  "homepage": "https://popcnui.com/"
}
